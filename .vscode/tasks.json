{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "P1 Build",
			"type": "shell",
			"command": "make -C P1 lab",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": {
				"owner": "cpp",
				"fileLocation": ["relative", "${workspaceFolder}/P1"],
				"pattern": {
				  "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
				  "file": 1,
				  "line": 2,
				  "column": 3,
				  "severity": 4,
				  "message": 5
				}
			}
		},
		{
			"label": "P1 Build Debug",
			"type": "shell",
			"command": "make -C P1 lab_debug",
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"problemMatcher": {
				"owner": "cpp",
				"fileLocation": ["relative", "${workspaceFolder}/P1"],
				"pattern": {
				  "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
				  "file": 1,
				  "line": 2,
				  "column": 3,
				  "severity": 4,
				  "message": 5
				}
			}
		}
	]
}